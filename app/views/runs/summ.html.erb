<% month = @runs.find_by_sql("SELECT DISTINCT date_part('month', rundate) from runs; ")
   month.each do |m|%>
   <strong>Month: </strong> <%= m %></br>
	<% @users.each do |u|%>
		 <strong>Runner: </strong><%= u.name %> </br>
		 <strong>Monthly Miles: </strong>
		 <%= u.runs.where("date_part('month', rundate) = '05'").sum(:distance)  %></br>
	<% end %>
<% end %>